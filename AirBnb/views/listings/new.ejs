<% layout("/layouts/boilerplate") -%>
<body>
    <h2>Create a new Listing</h2>
    <hr>
    <br>
    <form method="POST" action="/listings">
        <input name="listing[title]" placeholder="Enter title" type="text">
        <br>
        <br>
        <textarea name="listing[description]" placeholder="Enter description" type="text"></textarea>
        <br>
        <br>
        <input name="listing[image]" placeholder="Enter image url" type="text">
        <br>
        <br>
        <input name="listing[price]" placeholder="Enter price" type="number">
        <br>
        <br>
        <input name="listing[location]" placeholder="Enter location" type="text">
        <br>
        <br>
        <input name="listing[country]" placeholder="Enter the country name" type="text">
        <button>Submit</button>
    </form>
</body>
